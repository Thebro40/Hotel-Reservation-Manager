@model ReservationDetailsViewModel

@{
    ViewData["Title"] = "Delete Reservation";
}

<h1>Are you sure you want to delete this reservation?</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Delete">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                @Html.DisplayNameFor(model => model.AccommodationDate)
                @Html.DisplayFor(model => model.AccommodationDate)
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.LeaveDate)
                @Html.DisplayFor(model => model.LeaveDate)
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.HasAllInclusive)
                @Html.DisplayFor(model => model.HasAllInclusive)
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.HasBreakfast)
                @Html.DisplayFor(model => model.HasBreakfast)
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Price)
                @Html.DisplayFor(model => model.Price)
            </div>

            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-4" >
            @if (Model.Customers.Any())
        {
            <table class="table">
                <thead class="thead-light">
                    <tr>
                        <th>Id</th>
                        <th>Email</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Adult</th>
                        <th>Phone Number</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Customers)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsAdult)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>
                            <td>
                                <a asp-controller="Customers" asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-circle-info"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
    </table>
    }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}